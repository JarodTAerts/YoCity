<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="YoCity.Views.SettingsPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource colorPrimary}">


    <ContentPage.Content>
        <StackLayout Padding="15">
            <Button Text="Back" HorizontalOptions="StartAndExpand" VerticalOptions="Start" CornerRadius="20" BorderColor="WhiteSmoke"
                    BackgroundColor="WhiteSmoke" TextColor="{StaticResource colorPrimary}" Command="{Binding BackButtonClickedCommand}" HeightRequest="35" 
                        FontSize="Micro" />
            <Label Text="Settings" FontSize="30" FontAttributes="Bold" TextColor="WhiteSmoke" HorizontalOptions="StartAndExpand" Margin="0,0,0,20"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                <Switch IsToggled="{Binding AutoLogin}"/>
                <Label Text="Stay Logged in?" TextColor="WhiteSmoke" VerticalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>